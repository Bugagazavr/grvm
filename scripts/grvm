#!/bin/sh

function __grvmEval {
	eval "$@"
}

function __grvmFn {
	case $1 in
		"init")
			arg=`$HOME/.grvm/bin/grvm -s env`
			__grvmEval $arg
			;;
		"set"|"use")
			arg=`$HOME/.grvm/bin/grvm -s set $2 $3 $4 $5`
			__grvmEval $arg
			;;
		*)
			$HOME/.grvm/bin/grvm "$@"
			;;
	esac
}

alias grvm=__grvmFn

grvm init
